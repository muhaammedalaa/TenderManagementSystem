# Database Configuration
POSTGRES_DB=tms_db
POSTGRES_USER=tms_user
POSTGRES_PASSWORD=tms_password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Backend Configuration
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:80
JWT_KEY=YourSuperSecretKeyThatIsAtLeast32CharactersLong!
JWT_ISSUER=TMS
JWT_AUDIENCE=TMS
JWT_EXPIRY_IN_HOURS=24

# Frontend Configuration
REACT_APP_API_URL=http://localhost:5000
REACT_APP_ENVIRONMENT=production

# Redis Configuration (Optional)
REDIS_HOST=redis
REDIS_PORT=6379

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_EXTENSIONS=pdf,doc,docx,jpg,jpeg,png,gif,xlsx,xls

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@tms.com

# Logging Configuration
LOG_LEVEL=Information
LOG_FILE_PATH=/app/logs/tms.log

# Security Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# Rate Limiting (Optional)
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=10
