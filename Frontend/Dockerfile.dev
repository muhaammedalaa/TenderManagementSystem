# Development Dockerfile for React
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm ci

# Copy source code
COPY . .

# Expose port
EXPOSE 3000

# Set environment variables
ENV CHOKIDAR_USEPOLLING=true
ENV REACT_APP_API_URL=http://localhost:5000

# Start development server
CMD ["npm", "start"]
